<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_template_notify_agreement_revision" model="mail.template">
        <field name="name">Agereement: Was sent to a revision.</field>
        <field name="model_id" ref="someproject_agreement.model_agreement_agreement"/>
        <field name="subject">Need a revision.</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Agreement <span t-out="object.number"/> was sent to a revision.
                    <br/>
                </p>
            </div>
        </field>
        <field name="lang">{{ object.author_id.partner_id.lang }}</field>
    </record>
</odoo>
