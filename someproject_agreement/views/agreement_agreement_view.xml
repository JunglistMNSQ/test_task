<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="agreement_agreement_view_tree" model="ir.ui.view">
        <field name="name">agreement.agreement.view.tree</field>
        <field name="model">agreement.agreement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="number"/>
                <field name="partner_id"/>
                <field name="kind_id"/>
                <field name="state"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="author_id"/>
            </tree>
        </field>
    </record>

    <record id="agreement_agreement_view_form" model="ir.ui.view">
        <field name="name">agreement.agreement.view.form</field>
        <field name="model">agreement.agreement</field>
        <field name="arch" type="xml">
            <form string="Agreement Type">
                <header>
                    <button name="action_send_to_approve"
                            type="object"
                            string="Send to Approve"
                            groups="someproject_agreement.group_agreement_user"
                            states="draft"
                    />
                    <button name="action_approve"
                            type="object"
                            string="Approve"
                            groups="someproject_agreement.group_agreement_manager"
                            states="approval"/>
                    <button name="send_for_revision"
                            type="object"
                            string="Send for Revision"
                            groups="someproject_agreement.group_agreement_manager"
                            states="approval"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approval,active,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="number"/>
                        </h1>
                        </div>
                    <group>
                        <group>
                            <field name="partner_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="kind_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="author_id"/>
                        </group>
                        <group>
                            <field name="start_date" attrs="{'readonly': [('state', '!=', 'draft')]}" widget="date"/>
                            <field name="end_date" attrs="{'readonly': [('state', '!=', 'draft')]}" widget="date"/>
                        </group>
                    </group>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="agreement_agreement_action" model="ir.actions.act_window">
        <field name="name">Agreements</field>
        <field name="res_model">agreement.agreement</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
